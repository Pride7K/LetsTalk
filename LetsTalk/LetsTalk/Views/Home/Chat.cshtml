@model Chat

<div class="chat-body">
    @foreach (var message in Model.Messages)
    {
        <div class="message">
            <header >
                @message.Name
            </header>
            <p >
                @message.Text
            </p>
            <footer >
                @message.CreatedAt
            </footer>
        </div>
    }
</div>

<form class="chat-input" onsubmit="sendMessage(event)" asp-controller="Home" asp-action="CreateMessage">
    <input type="text" name="messageBody" id="message-input"/>
    <input type="hidden" name="roomId" value="@Model.Id"/>
    <button type="submit">Send</button>
</form>

@section Scripts
{
    <script src="~/js/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <script>
        var connection = new signalR.HubConnectionBuilder()
        .withUrl("/chatHub").build();
        
        var _connectionId = "";
        
        connection.on("RecieveMessage", function(data) {
            var message = document.createElement("div");
            message.classList.add("message");
            
            var header = document.createElement("header");
            header.appendChild(document.createTextNode(data.name))
            
            var paragraph = document.createElement("p");
            paragraph.appendChild(document.createTextNode(data.text))
            
            var footer = document.createElement("footer");
            var date = new Date(data.createdAt)
            footer.appendChild(document.createTextNode(date))
            
            
            message.appendChild(header)
            message.appendChild(paragraph)
            message.appendChild(footer)
            
            var body = document.querySelector(".chat-body")
        
            body.append(message);
        })
       
       
        
        var joinRoom = function() {
          axios.post("/Chat/JoinRoom/" + _connectionId + "/@Model.Id", null).then(function() {
            console.log("well")
          }).catch(function() {
             console.log("fail")
          });
        }
        
        connection.start().then(function() {
          connection.invoke("getConnectionId")
          .then(value => {
              _connectionId = value
              joinRoom()
          });
        }).catch(function(err) {
          console.log(err)
        });
               
        var sendMessage = function(event) {
          event.preventDefault();
         

          var data = new FormData(event.target);
          
          var messageInput = document.getElementById("message-input")
          
          messageInput.value = "";
          
          axios.post("/Chat/SendMessage",data).then(function() {
              
          }).catch(function() {
            
          })
        }
    </script>
    
}
