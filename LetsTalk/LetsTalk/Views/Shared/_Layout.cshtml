<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>LetsTalk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/index.css"/>
</head>
<body>
<div class="navbar">
<a asp-controller="Home" asp-action="Index">Home</a>
<a asp-controller="Home" asp-action="Find">Find Users Online</a>
<a asp-controller="Home" asp-action="Private">Private Room</a>
<a asp-controller="Home" asp-action="Report">User Reports</a>
</div>
<div class="main">
    @if (User.Identity.IsAuthenticated)
    {
        <vc:room></vc:room>
    }
    <div class="chat">
        @RenderBody()
    </div>
</div>
<div class="modal" id="create-room-modal">
    <form asp-controller="Home" asp-action="CreateRoom" class="modal-body">
        <button type="button" class="close" onclick="closeModal()">X</button>
        <header>Create Room</header>
        <div>
            <input name="name"/>
        </div>
        <footer>
            <button>Create</button>
        </footer>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.1.slim.js" integrity="sha256-tXm+sa1uzsbFnbXt8GJqsgi2Tw+m4BLGDof6eUPjbtk=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
<script src="~/js/index.js"></script>
@RenderSection("Scripts",false)
<script>
    $(window).on('beforeunload', function() {  
      //axios.post("/Account/Logout", null)
    });
</script>
</body>
</html>